---
import Layout from "../layouts/Layout.astro";
import heroImage from "../assets/images/programming.svg";
import Pill from "../components/Pill.astro";
import Container from "../components/Container.astro";
import GridSection from "../components/GridSection.astro";
import { projects } from "../data/projects.ts";
import { technologies } from "../data/technology.tsx";
import { challenges } from "../data/challenges.ts";
import HackerText from "../components/HackerText";
---

<!-- 
  gradient colors:
#C5EFCB, #F5D7E3, #F4A5AE
#FF99C9, #C1BDDB, #A2C7E5
-->
<Layout title="Steven Nguyen - Software Engineer & Fullstack Web Developer">
  <section class="flex items-center mt-10 mb-20">
    <div class="basis-1/2 flex flex-col gap-5">
      <h1 class="text-7xl font-bold">
        Hi there! My name is
        <span
          class="bg-gradient-to-r from-[#FF99C9] via-[#C1BDDB] to-[#A2C7E5] text-transparent bg-clip-text"
          ><HackerText target="STEVEN NGUYEN" client:load />
        </span>
      </h1>
      <p class="text-xl">
        I am a Software Engineer/Web Developer based in Atlanta, Georgia.
      </p>
      <div class="flex gap-4">
        <Pill>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m6.75 7.5 3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0 0 21 18V6a2.25 2.25 0 0 0-2.25-2.25H5.25A2.25 2.25 0 0 0 3 6v12a2.25 2.25 0 0 0 2.25 2.25Z"
            ></path>
          </svg>
          <p>Software Engineer</p>
        </Pill>
        <Pill>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5"
            ></path>
          </svg>
          <p>Web Developer</p>
        </Pill>
        <Pill>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
          </svg>
          <p>Test Engineer</p>
        </Pill>
      </div>
      <div class="mt-5 flex gap-5">
        <a
          href="mailto:stevennguyen56@gmail.com"
          class="bg-accent hover:bg-white text-black font-semibold rounded transition-all py-3 px-10"
          >CONTACT ME</a
        >
        <a
          href="/Resume_StevenNguyen.pdf"
          download="Resume_StevenNguyen.pdf"
          class="border-accent border rounded hover:bg-accent hover:text-black transition-all py-3 px-10 flex gap-2 font-semibold"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
            ></path>
          </svg>
           DOWNLOAD RESUME</a
        >
      </div>
    </div>
    <div class="basis-1/2">
      <img src={heroImage.src} alt="A drawing of a programmer at his desk" />
    </div>
  </section>
  <Container title="Skills" id="skills">
    <div class="grid grid-cols-12 gap-4 bg-primary rounded-xl p-5">
      {
        technologies.map((tech) => (
          <a
            href={tech.url}
            target="_blank"
            rel="noreferrer"
            rel="noopener"
            class="hover:scale-110 transition-all"
          >
            <img src={tech.icon.src} alt={tech.alt} />
            <span class="sr-only">{tech.name}</span>
          </a>
        ))
      }
    </div>
  </Container>
  <GridSection title="Recent Projects" data={projects} id="projects" />
  <GridSection title="Coding Challenges" data={challenges} id="challenges" />
</Layout>
